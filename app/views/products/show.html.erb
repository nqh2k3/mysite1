<!-- Link quay lại danh sách sản phẩm -->
<p style="margin-bottom: 20px;">
    <%= link_to "Back", products_path, style: "text-decoration: none; color: #0071ce; font-weight: bold;" %>
  </p>
  
  <!-- Phần chứa sản phẩm -->
  <section class="product" style="display: flex; gap: 40px; align-items: center; border: 1px solid #e0e0e0; border-radius: 10px; padding: 40px; background-color: #f9f9f9;">
    
    <!-- Hình ảnh sản phẩm nằm bên trái -->
    <div style="flex: 1; max-width: 400px;">
      <%= image_tag @product.featured_image, style: "width: 100%; height: auto; border-radius: 12px; box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);" if @product.featured_image.attached? %>
    </div>
  
    <!-- Thông tin sản phẩm nằm bên phải -->
    <section class="product-info" style="flex: 2;">
      <% cache @product do %>
        <h1 style="font-size: 36px; color: #333; font-weight: bold; margin-bottom: 20px; text-align: left;"><%= @product.name %></h1>
        <p style="font-size: 18px; color: #555; line-height: 1.8; text-align: left;"><%= @product.description %></p>
      <% end %>
  
      <%= render "inventory", product: @product %>
  
      <% if authenticated? %>
        <div style="margin-top: 30px;">
          <%= link_to "Edit", edit_product_path(@product), style: "display: inline-block; text-decoration: none; color: #0071ce; font-weight: bold; margin-right: 15px; font-size: 18px;" %>
          <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, style: "background-color: #e50914; color: white; padding: 12px 25px; border: none; border-radius: 10px; font-weight: bold; font-size: 18px; cursor: pointer;" %>
        </div>
      <% end %>
    </section>
  
  </section>
  